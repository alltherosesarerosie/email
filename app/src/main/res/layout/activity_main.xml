<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/btn_first"
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="170dp"
        android:background="@drawable/btn"
        android:paddingStart="10dp"
        android:drawableStart="@drawable/ic_email"
        android:hint="@string/Enter_email"

        />

    <EditText
        android:id="@+id/btn_second"
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_first"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn"
        android:paddingStart="10dp"
        android:drawableStart="@drawable/ic_theme"
        android:hint="@string/enter_theme"

        />

    <EditText
        android:id="@+id/btn_third"
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_second"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn"
        android:paddingStart="10dp"
        android:drawableStart="@drawable/ic_comment"
        android:hint="@string/text"
        tools:ignore="RtlSymmetry" />

    <Button
        android:onClick="onClick"
        android:id="@+id/btn_next"
        android:layout_width="350dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_third"
        android:layout_marginTop="150dp"
        android:text="@string/send"
        android:textSize="18sp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>